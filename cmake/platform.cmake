function(detect_platform)

    set(ENUMGEN_COMPILE_DEFINITIONS "")

    # Platform
    if(CMAKE_SYSTEM_NAME STREQUAL "Windows")
        set(ENUMGEN_PLATFORM_WIN TRUE PARENT_SCOPE)
        set(ENUMGEN_PLATFORM_LINUX FALSE PARENT_SCOPE)
        list(APPEND ENUMGEN_COMPILE_DEFINITIONS "ENUMGEN_PLATFORM_WIN")
    elseif(CMAKE_SYSTEM_NAME STREQUAL "Linux")
        set(ENUMGEN_PLATFORM_WIN FALSE PARENT_SCOPE)
        set(ENUMGEN_PLATFORM_LINUX TRUE PARENT_SCOPE)
        list(APPEND ENUMGEN_COMPILE_DEFINITIONS "ENUMGEN_PLATFORM_LINUX")
    else()
        message(FATAL_ERROR "Unsupported platform: ${CMAKE_SYSTEM_NAME}")
    endif()

    # Compiler
    if(CMAKE_CXX_COMPILER_ID STREQUAL "MSVC")
        set(ENUMGEN_COMPILER_MSVC TRUE PARENT_SCOPE)
        set(ENUMGEN_COMPILER_GCC FALSE PARENT_SCOPE)
        set(ENUMGEN_COMPILER_CLANG FALSE PARENT_SCOPE)
        list(APPEND ENUMGEN_COMPILE_DEFINITIONS "ENUMGEN_COMPILER_MSVC")
    elseif(CMAKE_CXX_COMPILER_ID STREQUAL "GNU")
        set(ENUMGEN_COMPILER_MSVC FALSE PARENT_SCOPE)
        set(ENUMGEN_COMPILER_GCC TRUE PARENT_SCOPE)
        set(ENUMGEN_COMPILER_CLANG FALSE PARENT_SCOPE)
        list(APPEND ENUMGEN_COMPILE_DEFINITIONS "ENUMGEN_COMPILER_GCC")
    elseif(CMAKE_CXX_COMPILER_ID STREQUAL "Clang")
        set(ENUMGEN_COMPILER_MSVC FALSE PARENT_SCOPE)
        set(ENUMGEN_COMPILER_GCC FALSE PARENT_SCOPE)
        set(ENUMGEN_COMPILER_CLANG TRUE PARENT_SCOPE)
        list(APPEND ENUMGEN_COMPILE_DEFINITIONS "ENUMGEN_COMPILER_CLANG")
    else()
        message(FATAL_ERROR "Unsupported compiler: ${CMAKE_CXX_COMPILER_ID}")
    endif()

    # STD version
    if (CMAKE_CXX_STANDARD STREQUAL "23")
        set(ENUMGEN_STD_VERSION 23 PARENT_SCOPE)
        list(APPEND ENUMGEN_HAS_CXX23 PARENT_SCOPE)
        list(APPEND ENUMGEN_HAS_CXX20 PARENT_SCOPE)
        list(APPEND ENUMGEN_HAS_CXX17 PARENT_SCOPE)
        list(APPEND ENUMGEN_COMPILE_DEFINITIONS "ENUMGEN_HAS_CXX17" "ENUMGEN_HAS_CXX20" "ENUMGEN_HAS_CXX23")
    elseif(CMAKE_CXX_STANDARD STREQUAL "20")
        list(APPEND ENUMGEN_HAS_CXX20 PARENT_SCOPE)
        list(APPEND ENUMGEN_HAS_CXX17 PARENT_SCOPE)
        list(APPEND ENUMGEN_COMPILE_DEFINITIONS "ENUMGEN_HAS_CXX17" "ENUMGEN_HAS_CXX20")
    elseif(CMAKE_CXX_STANDARD STREQUAL "17")
        list(APPEND ENUMGEN_HAS_CXX17 PARENT_SCOPE)
        list(APPEND ENUMGEN_COMPILE_DEFINITIONS "ENUMGEN_HAS_CXX17")
    else()
        message(FATAL_ERROR "Unknown CXX standard: ${CMAKE_CXX_STANDARD}")
    endif()

    # Build variant
    if(CMAKE_BUILD_TYPE STREQUAL "Debug" OR CMAKE_CONFIGURATION_TYPES STREQUAL "Debug")
        set(ENUMGEN_BUILD_DEBUG TRUE PARENT_SCOPE)
        set(ENUMGEN_BUILD_RELEASE FALSE PARENT_SCOPE)
        list(APPEND ENUMGEN_COMPILE_DEFINITIONS "ENUMGEN_BUILD_DEBUG")
    else()
        set(ENUMGEN_BUILD_DEBUG FALSE PARENT_SCOPE)
        set(ENUMGEN_BUILD_RELEASE TRUE PARENT_SCOPE)
        list(APPEND ENUMGEN_COMPILE_DEFINITIONS "ENUMGEN_BUILD_RELEASE")
    endif()

    set(ENUMGEN_COMPILE_DEFINITIONS ${ENUMGEN_COMPILE_DEFINITIONS} PARENT_SCOPE)

    message("ENUMGEN_COMPILE_DEFINITIONS:")
    foreach(DEF IN LISTS ENUMGEN_COMPILE_DEFINITIONS)
        message("    ${DEF}")
    endforeach()

endfunction()